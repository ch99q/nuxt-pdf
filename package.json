{
  "name": "nuxt-pdf",
  "version": "1.0.1",
  "description": "NuxtJS module to generate PDF files and manage PDF in your Nuxt application",
  "repository": "https://github.com/ch99q/nuxt-pdf",
  "homepage": "https://github.com/ch99q/nuxt-pdf",
  "author": {
    "name": "Christian Hansen"
  },
  "keywords": [
    "vue",
    "nuxt",
    "nuxt.js"
  ],
  "main": "lib/module.js",
  "license": "MIT",
  "scripts": {
    "dev": "nuxt test/fixture",
    "generate": "nuxt generate test/fixture",
    "test": "jest",
    "test:unit": "jest --testRegex \"/test/unit/(.+)\\.test\\.js$\"",
    "test:system": "jest --testRegex \"/test/system/(.+)\\.test\\.js$\"",
    "test:coverage": "yarn test --coverage",
    "format": "prettier './**/*.{js,ts,json,vue}' --write"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^1.2.0",
    "jest": "^24.9.0",
    "nuxt": "^2.10.2",
    "prettier": "^1.19.1",
    "puppeteer": "^2.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx}"
    ]
  },
  "dependencies": {
    "consola": "^2.11.0",
    "merge": "^1.2.1",
    "mkdirp": "^0.5.1",
    "pdf-lib": "^1.2.1"
  }
}
